<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentification_sourd"
    android:background="@drawable/bakk">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/listening"
       android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"


        />

    <EditText
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:textColorHint="#FA8072"
        android:textSize="15sp"
        android:drawableLeft="@drawable/ic_action_name"

        />

    <EditText
        android:id="@+id/passe"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Mot de passe"
        android:textColorHint="#FA8072"
        android:textSize="15sp"
        android:layout_below="@id/login"
        android:drawableLeft="@drawable/idffd"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/passe"
        android:background="@drawable/button_rectangle_pink"
        android:textColor="#ffff"
        />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="CrÃ©er compte"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/button"
        android:background="@drawable/button_rectangle_pink"
        android:textColor="#ffff"
        />


</RelativeLayout>